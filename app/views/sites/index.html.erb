<h1>Listing sites</h1>
<%= current_user.id %>
<table>
  <thead>
    <tr>
      <th>Domain</th>
      <th>Sub domain</th>
      <th>Name</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.domain %></td>
        <td><%= site.sub_domain %></td>
        <td><%= site.name %></td>
        <td><%= site.user_id %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><a href="http://<%=site.sub_domain%>.<%=site.domain%>:3000" target="_blank">Go to site</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path %>
